<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="form_product_pricelist_custom" model="ir.ui.view"> 
		<field name="name">di_product.pricelist.form.inherited</field>
		     <field name="model">product.pricelist</field> 
		     <field name="inherit_id" ref="product.product_pricelist_view"/> 
		     <field name="arch" type="xml"> 
			  <xpath expr="//field[@name='country_group_ids']" position="after"> 
			       <field name="telus_discount_image" widget='image'/>
			  </xpath> 
			  <xpath expr="//field[@name='compute_price']" position="after"> 
			       <field name="price_1" string="Cost /Mo"/>
			       <field name="price_2"/>
			  </xpath> 
		</field> 
	</record>
	
	
	<record id="form_product_pricelist_item_custom" model="ir.ui.view"> 
		<field name="name">product.pricelist.item.form.inherited</field>
		     <field name="model">product.pricelist.item</field> 
		     <field name="inherit_id" ref="product.product_pricelist_item_form_view"/> 
		     <field name="arch" type="xml"> 
			  <xpath expr="(//group/group)[position()=3]" position="after"> 
				  <group>
					  <field name="price_1" string="Cost/Mo"/>
					  <field name="price_2"/>
				  </group>			       
			  </xpath> 
		</field> 
	</record>
	
	<record id="form_dealer_info" model="ir.ui.view"> 
		<field name="name">Dealer Info Form</field>
		<field name="model">dealer.info</field>
		<field name="arch" type="xml">
			<form string="Dealer Information">
				<header>
				</header>
				<sheet>
					<field name="id" invisible="1"/>
					<field name="dealer_image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;dealer_image&quot;}"/>
					<div class="oe_title">
						<label for="name" class="oe_edit_only"/>
						<h1><field name="name" required="1"/></h1>
						<label for="is_active" string="Active"/>
						<field name="is_active" string="Active"/>
						<!--field name="email" invisible="1"/>
						<label for="login" class="oe_edit_only" string="Email Address"/>
						<h2><field name="login"/></h2-->
						<!--group>
							<field name="partner_id" readonly="1" required="0" groups="base.group_no_one" attrs="{'invisible': [('id', '=', False)]}"/>
						</group-->
					</div>
					<notebook colspan="4">
						<page name="general" string="General">
							<group string="General Information">
								<field name="rcid"/>
								<field name="pricelist_id"/>
							</group>
							<group string="Welcome Text">
								<field name="welcome_text"/>
							</group>
						</page>
						<page name="contact" string="Contact Information">
							<group string="Dealer Contacts">
								<field name="contact_email" string="Internal Contact Email"/>
								<field name="dealer_url"/>
							</group>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
	
	
	<template id="telus_welcome" name="Welcome">
	    <t t-call="website.layout">
             <t t-set="additional_title">EPP Welcome</t>
	        <div id="wrap" class="oe_structure oe_empty">
      <section class="s_title">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <h1 class="text-left o_default_snippet_text"><span t-esc="request.env.user.dealer_info_id.name">Business Here!</span></h1>
              <h3 class="text-center text-muted o_default_snippet_text">Welcome <span t-esc="request.env.user.name"></span></h3>
            </div>
          </div>
        </div>
      </section>
      <section class="s_big_picture bg-gray-lighter">
        <div class="container">
          <h2 class="text-center o_default_snippet_text"> </h2>
          <div class="row">
            <div class="col-md-12">
              <!--img class="img img-responsive" src="/dealer_info/static/images/30percentoff.PNG" style="margin: 0 auto;" alt="30% off"/-->
	<span t-field="request.env.user.dealer_info_id.dealer_image" t-field-options='{"widget": "image", "style": "margin: 0 auto;"}'></span>
            </div>
            <div class="col-md-6 col-md-offset-3 mb16 mt16">
              <p class="text-center">
                <b class="o_default_snippet_text"> </b>
              </p>
              <p class="text-center o_default_snippet_text">
                        <span t-field="request.env.user.dealer_info_id.welcome_text">Please review the Phones available to you through your Employee Purchase Program</span>
                    </p>
              <p class="text-center">
                <a href="/shop/category/phone-19" class="btn btn-primary">Start Shopping</a>
              </p>
            </div>
          </div>
        </div>
      </section>
	        </div>
	    </t>
	</template>
	
	<template id="frontend_layout" name="Main Frontend Layout (Custom)" inherit_id="portal.frontend_layout" customize_show="True">
		<xpath expr="//ul[@id='top_menu']/li[1]" position="before">
		    <li t-if="not user_id._is_public()">
			<a href="/epp_select_dealer">
			    <span data-oe-model="website.menu" data-oe-id="8" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">EPP Business</span>
			</a>
		    </li>
		</xpath>
	</template>
