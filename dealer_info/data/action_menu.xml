<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="dealer_info.list">
      <field name="name">Dealer Info list</field>
      <field name="model">dealer.info</field>
      <field name="arch" type="xml">
        <tree>
          <field name="is_active"/>
          <field name="name"/>
          <field name="pricelist_id"/>
          <field name="contact_email"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="dealer_info.action_window">
      <field name="name">EPP Dealer Information</field>
      <field name="res_model">dealer.info</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <!--record model="ir.actions.server" id="dealer_info.action_server">
      <field name="name">openacademy server</field>
      <field name="model_id" ref="model_dealer_info_dealer_info"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record-->

    <!-- Top menu item -->
    <menuitem name="EPP Dealer Info" id="dealer_info.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Dealers" id="dealer_info.menu_1" parent="dealer_info.menu_root"/>
    <menuitem name="Menu 2" id="dealer_info.menu_2" parent="dealer_info.menu_root"/>

    <!-- actions -->
    <menuitem name="Dealers" id="dealer_info.menu_1_list" parent="dealer_info.menu_1"
              action="dealer_info.action_window"/>
    <!--menuitem name="Server to list" id="dealer_info" parent="dealer_info.menu_2"
              action="dealer_info.action_server"/-->
  </data>
</odoo>
