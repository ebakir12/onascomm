<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="testimonial" model="ir.ui.view">
        <field name="name">Testimonial</field>
        <field name="type">qweb</field>
        <field name="key">website.testimonial</field>
        <field name="arch" type="xml">
